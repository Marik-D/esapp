{
  "compilerOptions": {
    "outDir": "dist",
    "composite": true,
    "incremental": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2018",
    "experimentalDecorators": true
  },
  "include": ["**/src/**/*.ts","**/src/**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
